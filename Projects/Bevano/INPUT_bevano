BLOCK 'COMPGRID' NOHEADER 'setup.dat' LAY 4 SETUP 1.   OUTPUT 20050401.000000 30 MIN
BLOCK 'COMPGRID' NOHEADER 'tmbot.dat' LAY 4 TMBOT 1.   OUTPUT 20050401.000000 30 MIN
BLOCK 'COMPGRID' NOHEADER 'ubot.dat' LAY 4 UBOT 1.     OUTPUT 20050401.000000 30 MIN
BLOCK 'COMPGRID' NOHEADER 'vel.dat' LAY 4 VEL 1.       OUTPUT 20050401.000000 30 MIN
BLOCK 'COMPGRID' NOHEADER 'wdir.dat' LAY 4 DIR 1.      OUTPUT 20050401.000000 30 MIN
BLOCK 'COMPGRID' NOHEADER 'wlen.dat' LAY 4 WLEN 1.     OUTPUT 20050401.000000 30 MIN
